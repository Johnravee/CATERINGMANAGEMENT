<Window x:Class="CATERINGMANAGEMENT.View.Windows.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Loading..."
        Width="540" Height="340"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    <Border CornerRadius="16" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1" Padding="24" Effect="{DynamicResource MaterialDesignElevation2}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Logo and App Name -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="4" HorizontalAlignment="Center">
                <Image Source="/Assets/images/applogo.png" Width="64" Height="64" Stretch="Uniform"/>
                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AppName}" FontSize="20" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock Text="Initializing..." FontSize="12" Foreground="#777"/>
                </StackPanel>
            </StackPanel>

            <!-- Center: Status -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="8">
                <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="#444" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>

            <!-- Footer: Progress -->
            <StackPanel Grid.Row="2" Margin="8,20,8,0">
                <ProgressBar Height="6" Minimum="0" Maximum="100" Value="{Binding Progress}" 
                             materialDesign:TransitionAssist.DisableTransitions="True"/>
                <TextBlock Text="Loading components..." Foreground="#888" FontSize="11" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
