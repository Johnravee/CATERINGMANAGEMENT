<Page x:Class="CATERINGMANAGEMENT.View.Pages.Payroll"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CATERINGMANAGEMENT.Converters"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Title="Payroll"
      Background="#FAFAFA"
      FontFamily="Calibri"
      FontSize="14">

    <Page.Resources>

        <local:NullToStringConverter x:Key="NullToStringConverter" />
        <!-- Centered TextBlock -->
        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MaxWidth" Value="250"/>
        </Style>

        <!-- Modern Flat Button -->
        <Style x:Key="ModernFlatButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E35B1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Centered DataGridCell Style -->
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1C4E9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Centered DataGridColumnHeader Style -->
        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#512DA8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="CashMultiple" Width="28" Height="28" Foreground="#673AB7" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Payroll Management" FontSize="26" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock FontSize="14" Foreground="Gray" Text="View and manage worker salaries"/>
                </StackPanel>
            </StackPanel>

            <Button Grid.Column="1" 
                    Style="{StaticResource ModernFlatButton}" 
                    Padding="10" Width="160"
                    Command="{Binding AddPayrollCommand}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="Add Payroll"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Summary Cards -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Border Background="White" CornerRadius="8" Padding="12" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,10,0" Width="150">
                <StackPanel>
                    <TextBlock Text="{Binding Payrolls.Count}" 
                               FontSize="24" FontWeight="Bold" Foreground="#512DA8" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Workers" FontSize="14" Foreground="Gray" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="8" Padding="12" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,10,0" Width="150">
                <StackPanel>
                    <TextBlock Text="{Binding TotalPayrollAmount, StringFormat='₱{0:N2}'}" 
                               FontSize="24" FontWeight="Bold" Foreground="#2E7D32" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Payroll" FontSize="14" Foreground="Gray" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Search Box -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Padding="4" Height="38" VerticalAlignment="Center" Margin="0,0,8,0">
                <DockPanel>
                    <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18" VerticalAlignment="Center" Foreground="#666" Margin="4,0"/>
                    <TextBox Width="200"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#333"
                             FontSize="14"
                             Padding="4,2"
                             VerticalContentAlignment="Center"
                             materialDesign:HintAssist.Hint="Search worker or payroll..."/>
                </DockPanel>
            </Border>
        </StackPanel>

        <!-- Payroll DataGrid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F0F0F0"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  ColumnHeaderHeight="40"
                  RowHeight="40"
                  Background="White"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CellStyle="{StaticResource CenteredCellStyle}"
                  ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Worker Name" Binding="{Binding Worker.Name}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Event" Binding="{Binding Reservation.ReceiptNumber}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Paid Status" Binding="{Binding PaidStatus}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Paid Date"
                    Binding="{Binding PaidDate, Converter={StaticResource NullToStringConverter}}"
                    Width="*"
                    ElementStyle="{StaticResource CenteredTextStyle}" />


                <DataGridTextColumn Header="Gross Pay" Binding="{Binding GrossPay, StringFormat='₱{0:N2}'}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTemplateColumn Header="Actions" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource ModernFlatButton}"
                                        ToolTip="Edit"
                                        Command="{Binding DataContext.EditPayrollCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="Edit"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource ModernFlatButton}"
                                        Background="#E53935"
                                        ToolTip="Delete"
                                        Command="{Binding DataContext.DeletePayrollCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="Delete"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Style="{StaticResource ModernFlatButton}" Width="80">
                <TextBlock Text="Prev"/>
            </Button>
            <TextBlock Text="1" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
            <TextBlock Text="/" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="10" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
            <Button Style="{StaticResource ModernFlatButton}" Width="80">
                <TextBlock Text="Next"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
