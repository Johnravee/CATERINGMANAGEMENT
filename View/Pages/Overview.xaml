<Page x:Class="CATERINGMANAGEMENT.View.Pages.Overview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d"
      Title="Overview">

    <Page.Resources>
        <materialDesign:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1C4E9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#512DA8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MaxWidth" Value="250"/>
        </Style>
    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1500" Margin="0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 🟪 HEADER -->
            <DockPanel Margin="0,0,0,20" LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Border Width="40" Height="40" CornerRadius="20" Background="#EDE7F6"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                        <materialDesign:PackIcon Kind="ViewDashboard" Width="22" Height="22"
                                                 Foreground="#673AB7"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Dashboard" FontSize="26" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Here’s your catering report summary so far" FontSize="14" Foreground="#777"/>
                    </StackPanel>
                </StackPanel>

                <Button DockPanel.Dock="Right"
                        Width="130"
                        Height="38"
                        Background="#673AB7"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Content="PDF Report"
                        Command="{Binding GeneratePdfCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"  />
            </DockPanel>

            <!-- 🟦 TOP SECTION -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- KPI CARDS -->
                <WrapPanel Grid.Column="0" Margin="0,0,16,0">
                    <!-- Equipment Card -->
                    <Border Background="#E3F2FD" CornerRadius="10" Padding="18" Margin="6" Width="250" Height="200">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="ToolboxOutline"
                                                         Width="24" Height="24" Margin="0,0,8,0"
                                                         Foreground="#1976D2"/>
                                <TextBlock Text="Equipment" FontSize="18" FontWeight="SemiBold" Foreground="#1565C0"/>
                            </StackPanel>
                            <TextBlock Text="{Binding DashboardCounters.TotalEquipments}" FontSize="34" FontWeight="Bold" Foreground="#0D47A1"/>
                            <TextBlock Text="{Binding DashboardCounters.DamagedEquipment, StringFormat={}{0} Damaged equipments}" Margin="0,10" FontSize="13" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Workers Card -->
                    <Border Background="#E8F5E9" CornerRadius="10" Padding="18" Margin="6" Width="250" Height="200">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="AccountGroup"
                                                         Width="24" Height="24" Margin="0,0,8,0"
                                                         Foreground="#2E7D32"/>
                                <TextBlock Text="Workers" FontSize="18" FontWeight="SemiBold" Foreground="#2E7D32"/>
                            </StackPanel>
                            <TextBlock Text="{Binding DashboardCounters.TotalWorkers}" FontSize="34" FontWeight="Bold" Foreground="#1B5E20"/>
                            <TextBlock Text="{Binding DashboardCounters.ActiveWorkers, StringFormat={}{0} Active workers}" FontSize="13" Foreground="#4CAF50" Margin="0,10"/>
                        </StackPanel>
                    </Border>

                    <!-- Kitchens Card -->
                    <Border Background="#FFF3E0" CornerRadius="10" Padding="18" Margin="6" Width="250" Height="200">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="SilverwareForkKnife"
                                                         Width="24" Height="24" Margin="0,0,8,0"
                                                         Foreground="#FB8C00"/>
                                <TextBlock Text="Kitchens" FontSize="18" FontWeight="SemiBold" Foreground="#FB8C00"/>
                            </StackPanel>
                            <TextBlock Text="{Binding DashboardCounters.TotalKitchenItems}" FontSize="34" FontWeight="Bold" Foreground="#E65100"/>
                            <TextBlock Text="{Binding DashboardCounters.KitchenLowStock, StringFormat={}{0} Low stocks}" FontSize="13" Foreground="#4CAF50" Margin="0,10"/>
                        </StackPanel>
                    </Border>

                    <!-- Reservations Card -->
                    <Border Background="#F3E5F5" CornerRadius="10" Padding="18" Margin="6" Width="250" Height="200">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="CalendarCheck"
                                                         Width="24" Height="24" Margin="0,0,8,0"
                                                         Foreground="#8E24AA"/>
                                <TextBlock Text="Reservations" FontSize="18" FontWeight="SemiBold" Foreground="#8E24AA"/>
                            </StackPanel>
                            <TextBlock Text="{Binding DashboardCounters.TotalReservations}" FontSize="34" FontWeight="Bold" Foreground="#6A1B9A"/>
                            <TextBlock Text="{Binding DashboardCounters.PendingReservations, StringFormat={}{0} Pending reservations}" FontSize="13" Foreground="#4CAF50" Margin="0,10"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Reservation Chart -->
                <materialDesign:Card Grid.Column="1" Padding="18" Margin="8,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                            <TextBlock Text="Year:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                            <ComboBox Width="140"
                                      ItemsSource="{Binding AvailableYears}"
                                      SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                                      materialDesign:HintAssist.Hint="Select Year"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </StackPanel>

                        <TextBlock Text="Reservations per Month" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                        <lvc:CartesianChart 
                                            x:Name="ReservationChart"
                                            Height="260"
                                            Series="{Binding ReservationSeries}"
                                            XAxes="{Binding XAxes}"
                                            YAxes="{Binding YAxes}" />
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- 🟨 BOTTOM SECTION -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>

                <!-- Upcoming Reservations -->
                <materialDesign:Card Grid.Column="0" Padding="16" Margin="8">
                    <StackPanel>
                        <TextBlock Text="Upcoming Reservations"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="0,0,0,12"/>
                        <DataGrid ItemsSource="{Binding UpcomingReservations}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  AlternatingRowBackground="#F0F0F0"
                                  Background="White"
                                  RowHeight="40"
                                  ColumnHeaderHeight="40"
                                  FontSize="14"
                                  FontFamily="Calibri"
                                  GridLinesVisibility="None"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  BorderThickness="0"
                                  CellStyle="{StaticResource CenteredCellStyle}"
                                  ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Receipt No."
                                                    Binding="{Binding ReceiptNumber}"
                                                    Width="*"
                                                    ElementStyle="{StaticResource CenteredTextStyle}"/>
                                <DataGridTextColumn Header="Venue"
                                                    Binding="{Binding Venue}"
                                                    Width="*"
                                                    ElementStyle="{StaticResource CenteredTextStyle}"/>
                                <DataGridTextColumn Header="Date"
                                                    Binding="{Binding EventDate, StringFormat='{}{0:MMMM dd, yyyy}'}"
                                                    Width="*"
                                                    ElementStyle="{StaticResource CenteredTextStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Event Type Distribution -->
                <materialDesign:Card Grid.Column="1" Padding="24" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Event Type Distribution"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        <Grid Grid.Row="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              MinHeight="250"
                              MinWidth="250">
                            <lvc:PieChart x:Name="EventTypeChart"
                                          Series="{Binding EventTypeSeries}"
                                          LegendPosition="Bottom"
                                          LegendTextSize="13"
                                          Height="300"
                                          Width="300" />
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="5"
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                    CornerRadius="8"
                    Panel.ZIndex="99">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True"
                                 Width="60"
                                 Height="60"
                                 Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Viewbox>
</Page>
