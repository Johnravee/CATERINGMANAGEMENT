<Page x:Class="CATERINGMANAGEMENT.View.Pages.EquipmentsInventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d"
      Background="#FAFAFA"
      FontFamily="Calibri"
      FontSize="14">

    <Page.Resources>
        <materialDesign:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Styles -->
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1C4E9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#512DA8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MaxWidth" Value="250"/>
        </Style>

        <Style x:Key="ModernFlatButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E35B1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>



        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title + New Item -->
            <RowDefinition Height="Auto"/>
            <!-- Cards -->
            <RowDefinition Height="Auto"/>
            <!-- Search + Export -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Title with New Item Button -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Warehouse" Width="28" Height="28" Foreground="#673AB7" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Equipments Inventory"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock FontSize="14"
                               Foreground="Gray"
                               Text="List of Equipment and Current Stock"/>
                </StackPanel>
            </StackPanel>

            <!-- New Item Button -->
            <Button Grid.Column="1" Style="{StaticResource ModernFlatButton}" Padding="10" Command="{Binding AddEquipmentCommand}" Width="100">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="New Item"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Cards -->
        <UniformGrid Grid.Row="1" Rows="1" Columns="3" Margin="0,0,0,10">
            <!-- Total Items Card -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="8" Height="90">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Grid.Column="0">
                        <TextBlock Text="Total Items" FontWeight="Bold" Foreground="#333" FontSize="14"/>
                        <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="PackageVariant" Foreground="#673AB7" Width="36" Height="36" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Good Condition Card -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="8" Height="90">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Grid.Column="0">
                        <TextBlock Text="Good Condition" FontWeight="Bold" Foreground="#333" FontSize="14"/>
                        <TextBlock Text="{Binding GoodConditionCount}" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="ThumbUpOutline" Foreground="Green" Width="36" Height="36" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Damage  Card -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="8" Height="90">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Grid.Column="0">
                        <TextBlock Text="Damaged" FontWeight="Bold" Foreground="#333" FontSize="14"/>
                        <TextBlock Text="{Binding DamagedCount}" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="Wrench" Foreground="Red" Width="36" Height="36" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Search + Export Toolbar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Visibility="Collapsed" Style="{StaticResource ModernFlatButton}" Command="{Binding ImportCommand}" Width="100" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FileImport" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="Import"/>
                </StackPanel>
            </Button>
            
            <!-- Search Box -->
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Padding="4" Height="38" VerticalAlignment="Center" Margin="0,0,8,0">
                <DockPanel>
                    <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18" VerticalAlignment="Center" Foreground="#666" Margin="4,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="200"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#333"
                             FontSize="14"
                             Padding="4,2"
                             VerticalContentAlignment="Center"
                             materialDesign:HintAssist.Hint="Search..." />
                </DockPanel>
            </Border>
        </StackPanel>

        <!-- DataGrid -->   
        <DataGrid x:Name="EquipmentDataGrid"
                  Grid.Row="3"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F0F0F0"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  ColumnHeaderHeight="40"
                  RowHeight="40"
                  Background="White"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  FontSize="16"
                  CellStyle="{StaticResource CenteredCellStyle}"
                  ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>

                <!-- Condition Column with color coding -->
                <DataGridTextColumn Header="Condition" Width="*">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Condition"/>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredTextStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Condition}" Value="Good">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Condition}" Value="Needs Repair">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Condition}" Value="Damaged">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Last Updated" Binding="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>

                <DataGridTemplateColumn Header="Actions" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource ModernFlatButton}" 
                                        ToolTip="Edit"
                                        Command="{Binding DataContext.EditEquipmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Margin="0,1.5,3,0"/>
                                        <TextBlock Text="Edit"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource ModernFlatButton}"  
                                        Background="#E53935" 
                                        ToolTip="Delete"
                                        Command="{Binding DataContext.DeleteEquipmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Margin="0,1.5,3,0"/>
                                        <TextBlock Text="Delete"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                CornerRadius="8">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Width="60"
                             Height="60"
                             Foreground="White  "/>
            </StackPanel>
        </Border>

        <!-- Pagination -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <TextBlock Text="Export Data as"
            FontWeight="Medium"
            Foreground="#333"
            Margin="0,0,20,0"
            VerticalAlignment="Center"/>
                <!-- CSV Button -->
            <Button Style="{StaticResource ModernFlatButton}" Command="{Binding ExportCsvCommand}" >
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileCsv" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="CSV"/>
                    </StackPanel>
                </Button>

                <!-- PDF Button -->
            <Button Style="{StaticResource ModernFlatButton}" Command="{Binding ExportPdfCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="PDF"/>
                    </StackPanel>
                </Button>

                <!-- Pagination Controls -->
                <Button Style="{StaticResource ModernFlatButton}" 
                    Width="80" 
                    Command="{Binding PrevPageCommand}">
                    <TextBlock Text="Prev"/>
                </Button>

                <TextBlock Text="{Binding CurrentPage}" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"
                   Margin="10,0"/>
                <TextBlock Text=" / " 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPages}" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Margin="10,0"/>

                <Button Style="{StaticResource ModernFlatButton}" 
                    Width="80" 
                    Command="{Binding NextPageCommand}" >
                    <TextBlock Text="Next"/>
                </Button>
            </StackPanel>
        </Grid>

</Page>
