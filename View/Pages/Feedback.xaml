<Page x:Class="CATERINGMANAGEMENT.View.Pages.Feedback"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Background="#FAFAFA"
      FontFamily="Calibri"
      FontSize="14">

    <Page.Resources>
        <materialDesign:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Shared Styles -->
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#512DA8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Clamp text to single line with ellipsis for narrow columns -->
        <Style x:Key="ClampTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="MaxWidth" Value="200"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Wider clamp for feedback body -->
        <Style x:Key="ClampFeedbackTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ClampTextStyle}">
            <Setter Property="MaxWidth" Value="420"/>
        </Style>

        <Style x:Key="ModernFlatButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E35B1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1C4E9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EDE7F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toggle shows Show/Hide on website and persists on change -->
        <Style x:Key="ApprovalToggleStyle" TargetType="ToggleButton">
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#B0BEC5"/>
            <EventSetter Event="Checked" Handler="ToggleButton_ApprovalChanged"/>
            <EventSetter Event="Unchecked" Handler="ToggleButton_ApprovalChanged"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="8,12,8,8">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="CommentText" Width="24" Height="24" Foreground="#673AB7" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Feedback" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock Text="Customer reviews and feedback" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Summary -->
        <UniformGrid Grid.Row="1" Rows="1" Columns="3" Margin="0,0,0,8">
            <Border Background="White" CornerRadius="8" Padding="12" Margin="8" Height="80">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.12"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Total Feedback" FontWeight="Bold" Foreground="#333" FontSize="13"/>
                        <TextBlock Text="{Binding TotalCount}" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="MessageTextOutline" Foreground="#673AB7" Width="28" Height="28" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Search -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Padding="4" Height="34" VerticalAlignment="Center" Margin="0,0,8,0">
                <DockPanel>
                    <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" VerticalAlignment="Center" Foreground="#666" Margin="4,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="220"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#333"
                             FontSize="13"
                             Padding="4,0"
                             VerticalContentAlignment="Center"
                             materialDesign:HintAssist.Hint="Search..." />
                </DockPanel>
            </Border>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#F3F3F3"
                  Background="White"
                  RowHeight="36"
                  ColumnHeaderHeight="38"
                  BorderThickness="0"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  FontSize="14"
                  RowStyle="{StaticResource CustomDataGridRowStyle}"
                  CellStyle="{StaticResource CenteredCellStyle}"
                  ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Profile.FullName}" Width="1.2*" MinWidth="120" ElementStyle="{StaticResource ClampTextStyle}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.2*" MinWidth="140" ElementStyle="{StaticResource ClampTextStyle}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" MinWidth="100" ElementStyle="{StaticResource ClampTextStyle}"/>
                <DataGridTextColumn Header="Feedback" Binding="{Binding FeedbackText}" Width="2*" MinWidth="220" ElementStyle="{StaticResource ClampFeedbackTextStyle}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding CreatedAt, StringFormat='MM-dd-yyyy'}" Width="Auto" MinWidth="110" ElementStyle="{StaticResource ClampTextStyle}"/>

                <!-- Actions (Toggle show on website and delete) -->
                <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Toggle (Show/Hide on website) -->
                                <ToggleButton Style="{StaticResource ApprovalToggleStyle}"
                                              IsChecked="{Binding ShowOnWebsite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              ToolTip="Toggle show on website">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Hide on Website"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShowOnWebsite}" Value="True">
                                                        <Setter Property="Text" Value="Show on Website"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </ToggleButton>

                                <!-- Delete -->
                                <Button Style="{StaticResource ModernFlatButton}"
                                        Background="#E53935"
                                        ToolTip="Delete"
                                        Command="{Binding DataContext.DeleteFeedbackCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Delete" Width="14" Height="14" Margin="0,1.5,3,0"/>
                                        <TextBlock Text="Delete"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Style="{StaticResource ModernFlatButton}" Command="{Binding PrevPageCommand}" MinWidth="70">
                <TextBlock Text="Prev"/>
            </Button>
            <TextBlock Text="{Binding CurrentPage}" FontWeight="Bold" Margin="10,6"/>
            <TextBlock Text=" / " FontWeight="Bold" Margin="0,6"/>
            <TextBlock Text="{Binding TotalPages}" FontWeight="Bold" Margin="10,6"/>
            <Button Style="{StaticResource ModernFlatButton}" Command="{Binding NextPageCommand}" MinWidth="70">
                <TextBlock Text="Next"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
