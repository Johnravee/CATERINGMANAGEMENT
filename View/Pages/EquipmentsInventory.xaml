<Page x:Class="CATERINGMANAGEMENT.View.Pages.EquipmentsInventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodel="clr-namespace:CATERINGMANAGEMENT.ViewModels"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Background="#FAFAFA"
      FontFamily="Calibri"
      FontSize="14">

    <Page.Resources>
        <materialDesign:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D1C4E9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#512DA8"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MaxWidth" Value="250"/>
        </Style>

        <Style x:Key="ModernFlatButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E35B1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Page.DataContext>
        <viewmodel:EquipmentsViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Warehouse" Width="28" Height="28" Foreground="#673AB7" Margin="0,0,10,0"/>
                <TextBlock Text="Inventory"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#333"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock FontSize="14"
                       Foreground="Gray"
                       Margin="0,4,0,20"
                       Text="List of Equipment and Current Stock"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cards -->
            <UniformGrid Rows="1" Columns="3" Margin="0,0,0,10">
                <Border Background="#7E57C2" CornerRadius="8" Padding="16" Margin="8" Height="90">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Total Items" FontWeight="Bold" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#66BB6A" CornerRadius="8" Padding="16" Margin="8" Height="90">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Good Condition" FontWeight="Bold" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding GoodConditionCount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#EF5350" CornerRadius="8" Padding="16" Margin="8" Height="90">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Needs Repair" FontWeight="Bold" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding NeedsRepairCount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Equipments}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F0F0F0"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      GridLinesVisibility="None"
                      BorderThickness="0"
                      ColumnHeaderHeight="40"
                      RowHeight="40"
                      Background="White"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CellStyle="{StaticResource CenteredCellStyle}"
                      ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                    <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                    <DataGridTextColumn Header="Last Updated" Binding="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                    <DataGridTemplateColumn Header="Actions" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource ModernFlatButton}" 
                                            ToolTip="Edit"
                                            Command="{Binding DataContext.EditEquipmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Margin="0,0,4,0"/>
                                            <TextBlock Text="Edit"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource ModernFlatButton}"  
                                            Background="#E53935" 
                                            ToolTip="Delete"
                                            Command="{Binding DataContext.DeleteEquipmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Margin="0,0,4,0"/>
                                            <TextBlock Text="Delete"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="2"
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                    CornerRadius="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True"
                                 Width="60"
                                 Height="60"
                                 Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Pagination -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="⟨ Prev" Style="{StaticResource ModernFlatButton}" />
            <Label Content="Page 1 of 5" VerticalAlignment="Center" FontWeight="Bold" Foreground="#333" Margin="10,0"/>
            <Button Content="Next ⟩" Style="{StaticResource ModernFlatButton}" />
        </StackPanel>
    </Grid>
</Page>
