<Page x:Class="CATERINGMANAGEMENT.View.Pages.ChatMessage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:CATERINGMANAGEMENT.ViewModels" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DataContext="{d:DesignInstance Type=viewmodels:ProfileViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatMessage">

    <Grid Margin="10" Background="#EAF2F8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar / Profiles -->
        <Border Grid.Column="0" BorderBrush="#C8D7E3" BorderThickness="0,0,1,0" Background="#F4FAFF">
            <DockPanel Background="#F4FAFF" LastChildFill="True" Margin="10">

                <!-- Sidebar Header with Compact Search Bar -->
                <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Background="#D9E9FF" >
                    <TextBlock Text="Profiles" FontSize="16" FontWeight="Bold" Foreground="#3A536B" Margin="10"/>
                   <TextBlock Text="Select a user to start chatting" FontSize="12" Foreground="#7A8D9C" Margin="12, 0"/>

                    <!-- Compact Search Bar -->
                    <Border Background="White"
                            CornerRadius="6"
                            BorderBrush="#B0C8DF"
                            BorderThickness="1"
                            Padding="4"
                            Height="36"
                            Margin="10">
                        <DockPanel>
                            <!-- 🔍 Search Icon -->
                            <materialDesign:PackIcon Kind="Magnify"
                                                     Width="18"
                                                     Height="18"
                                                     VerticalAlignment="Center"
                                                     Foreground="#7A8D9C"
                                                     Margin="2,0,6,0"/>

                            <!-- 📝 Search TextBox -->
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#3A536B"
                                     FontSize="14"
                                     Padding="0"
                                     Margin="0"
                                     VerticalContentAlignment="Center"
                                     materialDesign:HintAssist.Hint="Search..."
                                     Width="Auto"/>
                        </DockPanel>
                    </Border>
                </StackPanel>
                

                <!-- Profiles List -->
                <ListBox ItemsSource="{Binding Profiles}"
                         SelectedItem="{Binding SelectedProfile}"
                         BorderThickness="0"
                         Background="#F4FAFF"
                         Margin="10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,6">
                                <materialDesign:PackIcon Kind="AccountCircle" 
                                                         Width="28" Height="28" 
                                                         Foreground="#7A8D9C" 
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FullName}" 
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           Foreground="#3A536B"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Chat Section -->
        <Grid Grid.Column="2" Background="#F4FAFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <Border Background="#D3E6F7" Padding="12" BorderBrush="#B9C9D8" BorderThickness="0" CornerRadius="10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="{Binding SelectedProfile.FullName}" FontWeight="Bold" FontSize="14" Foreground="#2F4A5B"/>
                        <TextBlock Text="Chat session" FontSize="11" Foreground="#6E8E9E"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="AccountCircle" Width="28" Height="28" Foreground="#6E8E9E" />
                </StackPanel>
            </Border>
            <!-- Message List -->
            <Grid Grid.Row="1">
                <ListBox x:Name="MessagesList"
                         ItemsSource="{Binding ChatVM.Messages}"
                         Margin="10"
                         BorderThickness="0"
                         Background="Transparent"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <materialDesign:Card Margin="4" Padding="8" Background="#E3F0FF" >
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock x:Name="SenderNameTextBlock"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="#3A536B"
                                   Margin="0,0,0,10"
                                   Text="{Binding Sender.FullName}" />
                                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="14" Foreground="#3A536B"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}"
                                                   FontSize="10" Foreground="#7A8D9C" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Placeholder -->
                <TextBlock Text="Select a profile to view messages" 
                           Foreground="#7A8D9C" FontSize="14"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedProfile}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Message Input -->
            <Grid Grid.Row="2" Margin="10" VerticalAlignment="Bottom">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedProfile}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- TextBox -->
                <TextBox Grid.Column="0"
                         Text="{Binding ChatVM.NewMessage, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Type a message... 😀"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="14"
                         VerticalAlignment="Center"
                         Height="40"
                         Margin="0,0,10,0"
                         Padding="10,6"
                         VerticalContentAlignment="Center"
                         AcceptsReturn="False"
                         Background="#E9F0F8"
                         Foreground="#3A536B"
                         BorderBrush="#B0C8DF"/>

                <!-- Send Button -->
                <Button Grid.Column="1"
                        Height="40"                 
                        Width="60"
                        Background="#A3C4F3"
                        Foreground="#265078"
                        Cursor="Hand"
                        BorderThickness="0"
                        ToolTip="Send message"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Padding="10,0"
                        Margin="0">
                    <materialDesign:PackIcon Kind="Send" Width="20" Height="20" Foreground="#265078" Margin="0"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
