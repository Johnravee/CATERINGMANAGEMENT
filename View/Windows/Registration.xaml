<Window x:Class="CATERINGMANAGEMENT.View.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CATERINGMANAGEMENT.View.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None">

    <Border BorderBrush="#FF6200EE"
            BorderThickness="2"
            CornerRadius="10"
            Background="{DynamicResource MaterialDesignPaper}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Top-right Circle Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 10 10 0"
                        Background="Transparent"
                        Panel.ZIndex="99"
                        Grid.Column="1">
                <Ellipse Width="15" Height="15" Fill="LightGray" Margin="0 0 8 0" MouseDown="MinimizeAppBtnHandler">
                    <Ellipse.ToolTip>Minimize</Ellipse.ToolTip>
                </Ellipse>
                <Ellipse Width="15" Height="15" Fill="Tomato" MouseDown="ExitAppBtnHandler">
                    <Ellipse.ToolTip>Exit</Ellipse.ToolTip>
                </Ellipse>
            </StackPanel>

            <!-- Left Image Side -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="10,0,0,10">
                <Viewbox Stretch="Uniform">
                    <Image Source="/Assets/images/signupform.png" />
                </Viewbox>
            </Border>

            <!-- Right Form Side -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="0,10,10,0"
                    Padding="40">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <TextBlock Text="Create Account"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#333333"
                                   Margin="0 0 0 20" />

                        <!-- Email -->
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Email"
                                 Margin="0 0 0 15"
                                 FontSize="14"
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                        <!-- Password -->
                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:HintAssist.Hint="Password"
                                     Margin="0 0 0 15"
                                     FontSize="14" />

                        <!-- Confirm Password -->
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     materialDesign:HintAssist.Hint="Confirm Password"
                                     Margin="0 0 0 25"
                                     FontSize="14"
                                     />

                        <!-- Register Button -->
                        <Button Content="Register"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Foreground="White"
                                FontSize="16"
                                Padding="10 6"
                                Margin="0 10 0 0"
                                Cursor="Hand"
                                Command="{Binding RegisterAdminCommand}" />
                    </StackPanel>

                    <!-- Bottom Section -->
                    <StackPanel Grid.Row="1" Margin="0 20 0 0" HorizontalAlignment="Stretch">
                        <TextBlock Text="Already have an account?"
                                   FontSize="12"
                                   Foreground="#555555"
                                   TextAlignment="Center" />

                        <Button Content="Back to Login"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="{DynamicResource PrimaryHueMidBrush}"
                                FontSize="13"
                                HorizontalAlignment="Stretch"
                                Padding="10 6"
                                Click="BackToLogin_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
