<Window x:Class="CATERINGMANAGEMENT.View.Windows.EditScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Schedule"
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding GroupedSchedule.ClientName}" 
                   FontWeight="Bold" FontSize="18" />

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding AssignedWorkers}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0 10 0 10"
                  HeadersVisibility="Column"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Worker Name" Binding="{Binding Name}" Width="*" />
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Remove"
                                    Command="{Binding DataContext.RemoveWorkerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Foreground="White"
                                    Background="#C62828"
                                    Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    Width="100" />
        </StackPanel>
    </Grid>
</Window>
