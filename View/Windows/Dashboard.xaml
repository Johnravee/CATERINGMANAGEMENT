<Window x:Class="CATERINGMANAGEMENT.View.Windows.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Dashboard"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        WindowState="Normal"
        WindowStyle="None"
        MouseDown="HandleDashboard_Drag"
        >

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D6C4F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Margin="10,50,10,10" CornerRadius="12" Background="#E5DBFF ">
            <Grid Margin="0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="TuneVariant" Width="36" Height="36" Foreground="#2E2E2E"/>
                </StackPanel>

                <!-- Navigation Icons -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30">
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Dashboard" Margin="0,15" Click="BtnOverview_Click">
                        <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" Foreground="#2E2E2E" />
                    </Button>
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Reservations" Margin="0,15" Click="BtnReservations_Click">
                        <materialDesign:PackIcon Kind="CalendarCheck" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Equipment Inventory" Margin="0,15" Click="BtnEquipment_Click">
                        <materialDesign:PackIcon Kind="PackageVariant" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Kitchen Inventory" Margin="0,15"  Click="BtnKitchen_Click">
                        <materialDesign:PackIcon Kind="Kitchen" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Scheduling" Margin="0,15" Click="BtnSchedule_Click">
                        <materialDesign:PackIcon Kind="ClockOutline" Width="24" Height="24" Foreground="#2E2E2E" />
                    </Button>
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Payroll" Margin="0,15">
                        <materialDesign:PackIcon Kind="CashMultiple" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>

                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Payroll" Margin="0,10" Click="BtnWorkers_Click">
                        <materialDesign:PackIcon Kind="Worker" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>

                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Payroll" Margin="0,10">
                        <materialDesign:PackIcon Kind="Chat" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>
                </StackPanel>

                <!-- Settings and Logout -->
                <StackPanel Grid.Row="2" Margin="0,30" HorizontalAlignment="Center">
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Settings" Margin="0,10">
                        <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>
                    <Button Style="{StaticResource SidebarIconButton}" ToolTip="Logout" Margin="0,10">
                        <materialDesign:PackIcon Kind="LogoutVariant" Width="24" Height="24" Foreground="#2E2E2E"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top bar -->
                <RowDefinition Height="Auto"/>
                <!-- Admin panel -->
                <RowDefinition Height="749*"/>
                <!-- Main content -->
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,10,0"
            Grid.Column="1">

                <!-- Minimize -->
                <Grid Width="20" Height="20" Margin="5, 0" MouseDown="MinimizeAppBtnHandler" Cursor="Hand">
                    <Ellipse Fill="LightGray"/>
                    <TextBlock Text="─"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="10"/>
                </Grid>

                <!-- Maximize / Restore -->
                <Grid Width="20" Height="20" Margin="5, 0" MouseDown="MaximizeRestoreAppBtnHandler" Cursor="Hand">
                    <Ellipse Fill="Goldenrod"/>
                    <TextBlock x:Name="MaximizeIcon"
                               Text="□"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="10"/>
                </Grid>

                <!-- Exit -->
                <Grid Width="20" Height="20" Margin="5, 0" MouseDown="ExitAppBtnHandler" Cursor="Hand">
                    <Ellipse Fill="Tomato"/>
                    <TextBlock Text="x"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="10"/>
                </Grid>
            </StackPanel>


            <!-- Admin Panel Row -->
            <Border Grid.Row="1" Background="#E5DBFF " Padding="10" CornerRadius="12" Margin="0,10,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel VerticalAlignment="Center" Margin="5,0">
                        <TextBlock Text="Admin Name"
                                   Foreground="#2E2E2E"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="Administrator"
                                   FontSize="11"
                                   Foreground="#2E2E2E"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="AccountCircle"
                                             Width="32"
                                             Height="32"
                                             Foreground="#2E2E2E"
                                             Margin="0,0,8,0"/>
                </StackPanel>
            </Border>

            <!-- Dynamic Page Frame -->
            <Frame Grid.Row="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
