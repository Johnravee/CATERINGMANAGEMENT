<Window x:Class="CATERINGMANAGEMENT.View.Windows.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:CATERINGMANAGEMENT.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Dashboard"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        WindowState="Maximized"
        WindowStyle="None"
        MouseDown="HandleDashboard_Drag">

    <Window.Resources>
        <Style x:Key="SidebarIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8 6"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D6C4F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Margin="10,50,10,10" CornerRadius="12" Background="#E5DBFF">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo + Label -->
                    <StackPanel Grid.Row="0" Margin="10,20,10,30" HorizontalAlignment="Center" VerticalAlignment="Top" Width="160">
                        <Border Width="70" Height="70" Background="#D6C4F0" CornerRadius="35" HorizontalAlignment="Center">
                            <Image Source="/Assets/images/applogo.png" Width="52" Height="52" Stretch="Uniform" HorizontalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="CaterMate" FontWeight="Bold" FontSize="18" Foreground="#2E2E2E" Margin="0,10,0,0" TextAlignment="Center" Width="140"/>
                        <TextBlock Text="Your Smart Partner in Catering." FontSize="12" Foreground="#6A6A6A" TextAlignment="Center" Width="106"/>
                    </StackPanel>

                    <!-- Navigation Section -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Stretch">

                        <!-- Dashboard -->
                        <Button Style="{StaticResource SidebarIconButton}" ToolTip="Dashboard" Margin="0,8" Click="BtnOverview_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="26" Height="26" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <!-- Inventory Section -->
                        <Expander Header="Inventory" FontWeight="Bold"  Margin="0,8,0,0" Background="Transparent">
                            <StackPanel>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Equipment" Click="BtnEquipment_Click" >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PackageVariant" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Equipment" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Kitchen"  Click="BtnKitchen_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Kitchen" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Kitchen" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!-- Event Management -->
                        <Expander Header="Event Management" FontWeight="Bold"  Margin="0,8,0,0" Background="Transparent">
                            <StackPanel>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Reservations" Click="BtnReservations_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarCheck" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Reservations" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Scheduling" Click="BtnSchedule_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ClockOutline" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Scheduling" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!-- People & Payroll -->
                        <Expander Header="People &amp; Payroll" FontWeight="Bold" Margin="0,8,0,0" Background="Transparent">
                            <StackPanel>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Payroll" Click="BtnPayroll_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CashMultiple" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Payroll" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Workers" Click="BtnWorkers_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Worker" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Workers" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <!-- More Section -->
                        <Expander Header="More" FontWeight="Bold" Margin="0,8,0,0" Background="Transparent">
                            <StackPanel>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Menu" Click="BtnMenu_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FoodForkDrink" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Menu" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Packages" Click="BtnPackages_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Package" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Packages" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Theme &amp; Motif" Click="BtnThemeMotif_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" Margin="0,0,12,0" />
                                        <TextBlock Text="Theme &amp; Motif" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Grazing" Click="BtnGrazingOptions_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Corn" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Grazing" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SidebarIconButton}" ToolTip="Feedbacks" Margin="0,8" Click="BtnFeedBack_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MessageAlert" Width="24" Height="24" Margin="0,0,12,0"/>
                                        <TextBlock Text="Feedbacks" FontSize="16"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                    <!-- Settings & Logout -->
                    <StackPanel Grid.Row="2" Margin="0,30,0,0" HorizontalAlignment="Stretch">
                        <Button Visibility="Collapsed" Style="{StaticResource SidebarIconButton}" ToolTip="Settings" Margin="0,8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Settings" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarIconButton}" ToolTip="Logout" Margin="0,8" Command="{Binding SignOutCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LogoutVariant" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Logout" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                <Grid Width="20" Height="20" Margin="5,0" MouseDown="MinimizeAppBtnHandler" Cursor="Hand">
                    <Ellipse Fill="LightGray"/>
                    <TextBlock Text="─" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                </Grid>
                <Grid Width="20" Height="20" Margin="5,0" MouseDown="MaximizeRestoreAppBtnHandler" Cursor="Hand">
                    <Ellipse Fill="Goldenrod"/>
                    <TextBlock x:Name="MaximizeIcon" Text="□" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                </Grid>
                <Grid Width="20" Height="20" Margin="5,0" MouseDown="ExitAppBtnHandler" Cursor="Hand">
                    <Ellipse Fill="Tomato"/>
                    <TextBlock Text="x" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                </Grid>
            </StackPanel>

            <!-- Admin Info Bar -->
            <Border Grid.Row="1" Background="#E5DBFF" Padding="10" CornerRadius="12" Margin="0,10,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel VerticalAlignment="Center" Margin="5,0">
                        <TextBlock Text="{Binding CurrentUser.Email}" FontWeight="Bold" Foreground="#2E2E2E" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding AdminRole}" FontSize="11" Foreground="#2E2E2E" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <materialDesign:PackIcon Kind="AccountCircle" Width="32" Height="32" Foreground="#2E2E2E" Margin="0,0,8,0"/>
                </StackPanel>
            </Border>

            <!-- Dynamic Page Frame -->
            <Frame Grid.Row="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
