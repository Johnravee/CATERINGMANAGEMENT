<Window x:Class="CATERINGMANAGEMENT.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login"
        Height="550"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Border BorderBrush="#FF6200EE"
            BorderThickness="2"
            CornerRadius="15"
            Background="{DynamicResource MaterialDesignPaper}"
            ClipToBounds="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="593*" />
                <ColumnDefinition Width="203*" />
            </Grid.ColumnDefinitions>

            <!-- Top-right Circle Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 10 10 0"
                        Background="Transparent"
                        Panel.ZIndex="99"
                        Grid.Column="1">
                <Ellipse Width="15" Height="15" Fill="LightGray" Margin="0 0 8 0" MouseDown="MinimizeAppBtnHandler">
                    <Ellipse.ToolTip>Minimize</Ellipse.ToolTip>
                </Ellipse>
                <Ellipse Width="15" Height="15" Fill="Tomato" MouseDown="ExitAppBtnHandler">
                    <Ellipse.ToolTip>Exit</Ellipse.ToolTip>
                </Ellipse>
            </StackPanel>

            <!-- Main Content Grid -->
            <Grid Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Top-left Logo -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10"
                            Background="Transparent"
                            Panel.ZIndex="99">
                    <Image Source="/Assets/images/applogo.png"
                           Height="60"
                           Width="60"
                           Stretch="Uniform" />
                </StackPanel>

                <!-- Left Side (Image) -->
                <Border Grid.Column="0"
                        CornerRadius="13,0,0,13"
                        Background="{DynamicResource MaterialDesignPaper}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Viewbox Stretch="Uniform">
                        <Image Source="/Assets/images/LoginForm.png" />
                    </Viewbox>
                </Border>

                <!-- Right Side (Login Form) -->
                <Border Grid.Column="1"
                        CornerRadius="0,13,13,0"
                        Background="White"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Padding="30">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Main StackPanel with Form -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Top" IsEnabled="{Binding IsNotLoading}">
                            <!-- Welcome Text -->
                            <TextBlock Text="Welcome to"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#555555" />

                            <TextBlock Text="OSHDY Catering Services"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0 0 0 10" />

                            <TextBlock Text="Please log in to manage your events and reservations."
                                       FontSize="14"
                                       Foreground="#888888"
                                       Margin="0 0 0 30" />

                            <!-- Email -->
                            <TextBox x:Name="EmailBox"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Email"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Margin="0 0 0 20" />

                            <!-- Password -->
                            <PasswordBox x:Name="PasswordBox"
                                         materialDesign:HintAssist.Hint="Password"
                                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                         Margin="0 0 0 10"
                                        />

                            <!-- Forgot password -->
                            <TextBlock Text="Forgot Password?"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                       FontSize="12"
                                       HorizontalAlignment="Right"
                                       Margin="0 0 0 10"
                                       Cursor="Hand" />

                            <!-- Keep me signed in -->
                            <CheckBox Content="Keep me signed in"
                                      Margin="0 0 0 20"
                                      Foreground="#666"
                                      FontSize="12"
                                      IsChecked="{Binding KeepSignedIn}" />

                            <!-- Login Button -->
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Foreground="White"
                                    Padding="10"
                                    Height="38"
                                    Margin="0 0 0 10"
                                    Command="{Binding LoginCommand}"
                                    IsEnabled="{Binding IsNotLoading}">

                                <TextBlock Text="Login"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Setter Value="Logging in..." Property="Text" /> 
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>


                        </StackPanel>

                        <!-- Register Prompt -->
                        <StackPanel Grid.Row="2" Margin="0 20 0 0">
                            <Separator Margin="0 10" />
                            <TextBlock Text="Don’t have an account?"
                                       FontSize="12"
                                       Foreground="#555555" />
                            <Button Content="Create Account"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                    FontSize="13"
                                    Cursor="Hand"
                                    Click="CreateAccount_Click" />
                        </StackPanel>

                        <!-- Version Text at Bottom -->
                        <TextBlock Grid.Row="4"
                                   Text="Version 1.0.0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   FontSize="10"
                                   Foreground="#AAAAAA"
                                   Margin="0 10 0 10" />

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
