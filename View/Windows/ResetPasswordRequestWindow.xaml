<Window x:Class="CATERINGMANAGEMENT.View.Windows.ResetPasswordRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reset Password"
        Height="220"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Enter your email to receive a reset link"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10" />

        <TextBox x:Name="EmailBox"
                 Grid.Row="1"
                 materialDesign:HintAssist.Hint="Email"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="0,0,0,8"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Cancel" Margin="0,0,8,0" Click="OnCancel"/>
            <Button Content="Send Link" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Click="OnSendLink"/>
        </StackPanel>
    </Grid>
</Window>