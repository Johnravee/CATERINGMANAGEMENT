<Window x:Class="CATERINGMANAGEMENT.View.Windows.KitchenItemAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="420" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FontFamily="Segoe UI"
        Title="Kitchen Item">

    <Border CornerRadius="12" Background="White" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Kitchen Item" FontSize="24" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,20"/>

            <!-- Item Name -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Item Name" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox x:Name="ItemNameTextBox" Padding="8" FontSize="14" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1"/>
            </StackPanel>

            <!-- Unit -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Unit" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox x:Name="UnitTextBox" Padding="8" FontSize="14" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1"/>
            </StackPanel>

            <!-- Quantity -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Quantity" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox x:Name="QuantityTextBox" Padding="8" FontSize="14" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Width="90" Height="32" Margin="0,0,10,0" Click="Cancel_Click" Background="#E5E7EB" Foreground="#333" BorderBrush="#D1D5DB" BorderThickness="1"/>
                <Button Content="Save" Width="90" Height="32" Click="Save_Click" Background="#4F46E5" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
