<Window x:Class="CATERINGMANAGEMENT.View.Windows.KitchenItemAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Height="420" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FontFamily="Segoe UI"
        Title="Kitchen Item">

    <Window.Resources>
        <!-- Common kitchen units -->
        <x:Array x:Key="KitchenUnits" Type="sys:String">
            <!-- Countable -->
            <sys:String>pc</sys:String>
            <sys:String>pcs</sys:String>
            <sys:String>set</sys:String>
            <sys:String>dozen</sys:String>
            <sys:String>pack</sys:String>
            <sys:String>box</sys:String>
            <sys:String>bag</sys:String>
            <sys:String>tray</sys:String>
            <sys:String>bundle</sys:String>
            <sys:String>pouch</sys:String>
            <sys:String>sachet</sys:String>
            <sys:String>jar</sys:String>
            <sys:String>bottle</sys:String>
            <sys:String>can</sys:String>
            <sys:String>roll</sys:String>
            <sys:String>sheet</sys:String>
            <sys:String>stick</sys:String>
            <sys:String>piece</sys:String>
            <!-- Volume -->
            <sys:String>ml</sys:String>
            <sys:String>l</sys:String>
            <sys:String>cl</sys:String>
            <sys:String>dl</sys:String>
            <sys:String>cup</sys:String>
            <sys:String>tbsp</sys:String>
            <sys:String>tsp</sys:String>
            <sys:String>qt</sys:String>
            <sys:String>gal</sys:String>
            <!-- Weight -->
            <sys:String>g</sys:String>
            <sys:String>kg</sys:String>
            <sys:String>mg</sys:String>
            <sys:String>lb</sys:String>
            <sys:String>oz</sys:String>
            <!-- Length/others -->
            <sys:String>m</sys:String>
            <sys:String>cm</sys:String>
            <sys:String>mm</sys:String>
            <sys:String>inch</sys:String>
            <sys:String>ft</sys:String>
        </x:Array>
    </Window.Resources>

    <Border CornerRadius="12" Background="White" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Kitchen Item" FontSize="24" FontWeight="Bold" Foreground="#2D2D2D" Margin="0,0,0,20"/>

            <!-- Item Name -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Item Name" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox 
                    Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}" 
                    Padding="8" FontSize="14" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1"/>
            </StackPanel>

            <!-- Unit -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Unit" Foreground="#555" Margin="0,0,0,4"/>
                <ComboBox
                    IsEditable="True"
                    IsTextSearchEnabled="True"
                    Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{StaticResource KitchenUnits}"
                    Padding="8" FontSize="14" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1"/>
            </StackPanel>

            <!-- Quantity -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Quantity" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox 
                    Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                    Padding="8" FontSize="14" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button 
                    Content="Save" Width="90" Height="32" 
                    Command="{Binding SaveCommand}" 
                    Background="#4F46E5" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
