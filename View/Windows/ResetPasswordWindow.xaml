<Window x:Class="CATERINGMANAGEMENT.View.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:CATERINGMANAGEMENT.Helpers"
        Title="Reset Password"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Border BorderBrush="#FF6200EE"
            BorderThickness="2"
            CornerRadius="15"
            Background="{DynamicResource MaterialDesignPaper}"
            ClipToBounds="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="593*" />
                <ColumnDefinition Width="203*" />
            </Grid.ColumnDefinitions>

            <!-- Top-right Circle Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 10 10 0"
                        Background="Transparent"
                        Panel.ZIndex="99"
                        Grid.Column="1">
                <Ellipse Width="15" Height="15" Fill="LightGray" Margin="0 0 8 0">
                    <Ellipse.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding MinimizeCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                    </Ellipse.InputBindings>
                    <Ellipse.ToolTip>Minimize</Ellipse.ToolTip>
                </Ellipse>
                <Ellipse Width="15" Height="15" Fill="Tomato">
                    <Ellipse.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding ExitCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                    </Ellipse.InputBindings>
                    <Ellipse.ToolTip>Exit</Ellipse.ToolTip>
                </Ellipse>
            </StackPanel>

            <!-- Main Content Grid -->
            <Grid Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Top-left Logo -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10"
                            Background="Transparent"
                            Panel.ZIndex="99">
                    <Image Source="/Assets/images/applogo.png"
                           Height="60"
                           Width="60"
                           Stretch="Uniform" />
                </StackPanel>

                <!-- Left Side (Image) -->
                <Border Grid.Column="0"
                        CornerRadius="13,0,0,13"
                        Background="{DynamicResource MaterialDesignPaper}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Viewbox Stretch="Uniform">
                        <Image Source="/Assets/images/LoginForm.png" />
                    </Viewbox>
                </Border>

                <!-- Right Side (Reset Form) -->
                <Border Grid.Column="1"
                        CornerRadius="0,13,13,0"
                        Background="White"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Padding="30">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Form Content -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Top">
                            <TextBlock Text="Reset your password"
                                       FontSize="30"
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       Margin="0 0 0 8" />

                            <TextBlock Text="Enter and confirm your new password."
                                       FontSize="16"
                                       Foreground="#888888"
                                       Margin="0 0 0 26" />

                            <!-- New Password -->
                            <PasswordBox x:Name="PasswordBoxNew"
                                         helpers:PasswordBoxHelper.BindPassword="True"
                                         helpers:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="New Password"
                                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                         FontSize="14"
                                         Margin="0 0 0 16" />

                            <!-- Confirm Password -->
                            <PasswordBox x:Name="PasswordBoxConfirm"
                                         helpers:PasswordBoxHelper.BindPassword="True"
                                         helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Confirm Password"
                                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                         FontSize="14"
                                         Margin="0 0 0 26" />

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Cancel"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Margin="0 0 10 0"
                                        FontSize="14"
                                        Command="{Binding CancelCommand}" />
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Foreground="White"
                                        Padding="10"
                                        Height="40"
                                        Command="{Binding ConfirmCommand}"
                                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding IsBusy}"
                                        materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                                    <TextBlock Text="Confirm" FontSize="15">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Confirm" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                                        <Setter Property="Text" Value="Updating..." />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Footer Version -->
                        <TextBlock Grid.Row="4"
                                   Text="CaterMate"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   FontSize="10"
                                   Foreground="#AAAAAA"
                                   Margin="0 10 0 10" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>