<Window x:Class="CATERINGMANAGEMENT.View.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="220" Width="380" WindowStartupLocation="CenterScreen">
	
	
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter a new password" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="New password"/>
            <PasswordBox x:Name="PasswordBoxNew" Margin="0,4,0,8"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="Confirm password"/>
            <PasswordBox x:Name="PasswordBoxConfirm" Margin="0,4,0,8"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Confirm" Width="100" HorizontalAlignment="Right" Click="OnConfirmClick" Margin="0,8,0,0"/>
    </Grid>
</Window>