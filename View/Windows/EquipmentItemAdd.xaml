<Window x:Class="CATERINGMANAGEMENT.View.Windows.EquipmentItemAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FontFamily="Segoe UI"
        Title="Add Equipment">

    <Border CornerRadius="12" Background="White" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Add New Equipment"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2D2D2D"
                       Margin="0,0,0,20"/>

            <!-- Item Name -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Item Name" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8" FontSize="14"
                         Background="#F3F4F6" BorderThickness="1" BorderBrush="#D1D5DB"/>
            </StackPanel>

            <!-- Quantity -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Quantity" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8" FontSize="14"
                         Background="#F3F4F6" BorderThickness="1" BorderBrush="#D1D5DB"
                         />
            </StackPanel>

            <!-- Condition -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Condition" Foreground="#555" Margin="0,0,0,4"/>
                <ComboBox SelectedValue="{Binding Condition}" SelectedValuePath="Content"
                          FontSize="14" Padding="6"
                          Background="#F3F4F6" BorderBrush="#D1D5DB">
                    <ComboBoxItem Content="Good"/>
                    <ComboBoxItem Content="Needs Repair"/>
                    <ComboBoxItem Content="Damaged"/>
                </ComboBox>

            </StackPanel>

            <!-- Notes -->
            <StackPanel Grid.Row="4" Margin="0,0,0,15">
                <TextBlock Text="Notes" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         Height="80" Padding="8" FontSize="14"
                         Background="#F3F4F6" BorderBrush="#D1D5DB"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Add" Width="90" Height="32"
                        Command="{Binding SaveCommand}"
                        Background="#4F46E5" Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
