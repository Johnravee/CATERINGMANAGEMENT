<Window x:Class="CATERINGMANAGEMENT.View.Windows.EditMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="420"
        Width="420"
        Background="#F9FAFB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <x:Array x:Key="MenuCategories" Type="sys:String">
            <sys:String>Appetizer</sys:String>
            <sys:String>Soup</sys:String>
            <sys:String>Salad</sys:String>
            <sys:String>Main Course</sys:String>
            <sys:String>Side Dish</sys:String>
            <sys:String>Vegetable</sys:String>
            <sys:String>Pasta</sys:String>
            <sys:String>Rice</sys:String>
            <sys:String>Seafood</sys:String>
            <sys:String>Beef</sys:String>
            <sys:String>Pork</sys:String>
            <sys:String>Chicken</sys:String>
            <sys:String>Grill</sys:String>
            <sys:String>BBQ</sys:String>
            <sys:String>Noodles</sys:String>
            <sys:String>Breakfast</sys:String>
            <sys:String>Brunch</sys:String>
            <sys:String>Dessert</sys:String>
            <sys:String>Beverage</sys:String>
            <sys:String>Kids</sys:String>
            <sys:String>Vegan</sys:String>
            <sys:String>Vegetarian</sys:String>
            <sys:String>Gluten-Free</sys:String>
            <sys:String>Halal</sys:String>
            <sys:String>Keto</sys:String>
            <sys:String>Snack</sys:String>
            <sys:String>Canapés</sys:String>
            <sys:String>Platter</sys:String>
            <sys:String>Buffet</sys:String>
            <sys:String>Ala Carte</sys:String>
        </x:Array>
    </Window.Resources>

    <Border CornerRadius="12"
            Background="White"
            Padding="20"
            Margin="10"
            Effect="{DynamicResource DropShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Name -->
                <RowDefinition Height="Auto"/>
                <!-- Category -->
                <RowDefinition Height="Auto"/>
                <!-- Status -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Edit Menu Option"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2D2D2D"
                       Margin="0,0,0,20"/>

            <!-- Name Field -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Name" Foreground="#555" Margin="0,0,0,4"/>
                <TextBox x:Name="NameTextBox"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         CharacterCasing="Upper"
                         Padding="8"
                         FontSize="14"
                         Background="#F3F4F6"
                         BorderThickness="1"
                         BorderBrush="#D1D5DB"/>
            </StackPanel>

            <!-- Category Field -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Category" Foreground="#555" Margin="0,0,0,4"/>
                <ComboBox x:Name="CategoryComboBox"
                          IsEditable="True"
                          IsTextSearchEnabled="True"
                          Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{StaticResource MenuCategories}"
                          Padding="8"
                          FontSize="14"
                          Background="#F3F4F6"
                          BorderThickness="1"
                          BorderBrush="#D1D5DB"/>
            </StackPanel>

            <!-- Status Field -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Status" Foreground="#555" Margin="0,0,0,4"/>
                <ComboBox x:Name="StatusComboBox"
                          SelectedValue="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content"
                          Padding="8"
                          FontSize="14"
                          Background="#F3F4F6"
                          BorderThickness="1"
                          BorderBrush="#D1D5DB">
                    <ComboBoxItem Content="Available"/>
                    <ComboBoxItem Content="Unavailable"/>
                </ComboBox>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"
                        Background="#E5E7EB"
                        Foreground="#333"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"/>
                <Button Content="Save"
                        Width="90"
                        Height="32"
                        Command="{Binding SaveCommand}"
                        Background="#4F46E5"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
