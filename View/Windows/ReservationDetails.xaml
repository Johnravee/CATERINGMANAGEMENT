<Window x:Class="CATERINGMANAGEMENT.View.Windows.ReservationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reservation Details"
        Height="750" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Calibri"
        FontSize="18"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Purple" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <materialDesign:DialogHost x:Name="LoaderDialogHost">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <ProgressBar IsIndeterminate="True"
                             Width="60" Height="60"
                             Style="{StaticResource MaterialDesignCircularProgressBar}" />
                <TextBlock Text="Generating contract and sending email..."
                           Margin="0,15,0,0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="Black"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>

        <Grid>
            <!-- Main Layout WITHOUT IMAGE -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Reservation Form -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0">
                    <Border Background="White" Padding="20" CornerRadius="10">
                        <StackPanel>

                            <TextBlock Text="Reservation Details"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,20"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}" />

                            <!-- Fields -->
                            <TextBox Text="{Binding ReceiptNumber}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Receipt Number"
                                     Margin="0,0,0,10"
                                     IsReadOnly="True"
                                     />

                            <TextBox Text="{Binding Celebrant}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Celebrant"
                                     Margin="0,0,0,10" 
                                     />

                            <TextBox Text="{Binding Venue}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Venue"
                                     Margin="0,0,0,10" 
                                     />

                            <TextBox Text="{Binding Profile.FullName}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Client Name"
                                     Margin="0,0,0,10"
                                     />

                            <TextBox Text="{Binding Profile.Email}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Email"
                                     Margin="0,0,0,10"
                                     />

                            <TextBox Text="{Binding ThemeMotif.Name}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Theme / Motif"
                                     Margin="0,0,0,10"
                                     />

                            <TextBox Text="{Binding Package.Name}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Package"
                                     Margin="0,0,0,10"
                                     />

                            <TextBox Text="{Binding Grazing.Name}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Grazing Table"
                                     Margin="0,0,0,10"
                                     />

                            <TextBox Text="{Binding Location}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Location"
                                     Margin="0,0,0,10" 
                                     />

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <DatePicker SelectedDate="{Binding EventDate}"
                                            Grid.Column="0"
                                            materialDesign:HintAssist.Hint="Event Date" />

                                <TextBox Text="{Binding EventTime}"
                                         Grid.Column="2"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Event Time" 
                                          />
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding AdultsQty}"
                                         Grid.Column="0"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Adults Qty"
                                         />

                                <TextBox Text="{Binding KidsQty}"
                                         Grid.Column="2"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:HintAssist.Hint="Kids Qty"
                                         />
                            </Grid>

                            <ComboBox SelectedValue="{Binding Status}"
                                      SelectedValuePath="Content"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      materialDesign:HintAssist.Hint="Status"
                                      Margin="0,0,0,10">
                                <ComboBoxItem Content="pending" />
                                <ComboBoxItem Content="confirmed" />
                                <ComboBoxItem Content="canceled" />
                            </ComboBox>

                            <!-- Button Section -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,20,0,0">

                                <!-- Cancel Button -->
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Padding="12,6"
                                        Click="CancelButton_Click"
                                        Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Cancel" Width="20" Height="20" Margin="0,0,6,0"/>
                                        <TextBlock Text="Cancel" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <!-- Update Button -->
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#673AB7"
                                        Foreground="White"
                                        Padding="12,6"
                                        Margin="0,0,8,0"
                                        Command="{Binding UpdateReservationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ContentSaveEdit" Width="20" Height="20" Margin="0,0,6,0" />
                                        <TextBlock Text="Update" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <!-- Generate Contract Button -->
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#3949AB"
                                        Foreground="White"
                                        Click="GenerateContractButton_Click"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FilePdfBox" Width="20" Height="20" Margin="0,0,6,0" />
                                        <TextBlock Text="Generate Contract" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
