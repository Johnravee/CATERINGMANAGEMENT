<Window x:Class="CATERINGMANAGEMENT.View.Windows.ReservationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reservation Details"
        Height="900" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Calibri"
        FontSize="18"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Purple" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 📄 LEFT SIDE: Contract A4 Preview -->
        <ScrollViewer Grid.Column="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0">
                <Grid Width="595" Height="842" Background="White">
                    <!-- A4 background image -->
                    <Image Source="/Assets/images/contract.png" Stretch="Fill" />

                    <!-- Overlay Text: align based on PDF positions -->
                    <TextBlock Text="{Binding Celebrant}" FontSize="12" FontWeight="Bold"
                               Foreground="Black" Margin="420,142,0,0"
                               HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <TextBlock Text="{Binding Venue}" FontSize="12" Foreground="Black"
                               Margin="110,290,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <TextBlock Text="{Binding Location}" FontSize="12" Foreground="Black"
                               Margin="420,290,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <TextBlock Text="{Binding EventDate, StringFormat='{}{0:MMMM dd, yyyy}'}"
                               FontSize="12" Foreground="Black"
                               Margin="130,320,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <TextBlock Text="{Binding EventTime}" FontSize="12" Foreground="Black"
                               Margin="420,320,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <TextBlock Text="{Binding AdultsQty}" FontSize="12" Foreground="Black"
                               Margin="140,350,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <TextBlock Text="{Binding KidsQty}" FontSize="12" Foreground="Black"
                               Margin="420,350,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

                    <!-- Add more overlays here -->
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- 📝 RIGHT SIDE: Reservation Form -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Background="White" Margin="0">

                <TextBlock Text="Reservation Details"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" />

                <!-- Form Fields -->
                <TextBox Text="{Binding ReceiptNumber}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Receipt Number"
                         Margin="0,0,0,10"
                         IsReadOnly="True" />

                <TextBox Text="{Binding Celebrant}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Celebrant"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding Venue}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Venue"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding Location}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Location"
                         Margin="0,0,0,10" />

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <DatePicker SelectedDate="{Binding EventDate}"
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="Event Date" />

                    <TextBox Text="{Binding EventTime}"
                             Grid.Column="2"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Event Time" />
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding AdultsQty}"
                             Grid.Column="0"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Adults Qty" />

                    <TextBox Text="{Binding KidsQty}"
                             Grid.Column="2"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Kids Qty" />
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ComboBox SelectedValue="{Binding Status}"
                              SelectedValuePath="Content"
                              Grid.Column="0"
                              Style="{StaticResource MaterialDesignComboBox}"
                              materialDesign:HintAssist.Hint="Status"
                              IsEditable="False">
                        <ComboBoxItem Content="pending" />
                        <ComboBoxItem Content="confirmed" />
                        <ComboBoxItem Content="canceled" />
                    </ComboBox>
                </Grid>

                <!-- Actions -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Update"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,10,0" />

                    <Button Content="Delete"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="Red" />

                    <Button Content="Generate Contract"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="Red"
                            Click="GenerateContractButton_Click" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
