<Window x:Class="CATERINGMANAGEMENT.View.Windows.ReservationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reservation Details"
        Height="700" Width="900" MinWidth="700" MinHeight="550"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Segoe UI"
        FontSize="14"
        Style="{StaticResource MaterialDesignWindow}"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Disable when reservation is done or canceled -->
        <Style x:Key="TextBoxDisableWhenFinal" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="Height" Value="32" />
            <Setter Property="FontSize" Value="14" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="done">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="canceled">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxDisableWhenFinal" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Height" Value="34" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="done">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="canceled">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonDisableWhenFinal" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="done">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="canceled">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DatePickerDisableWhenFinal" TargetType="DatePicker">
            <Setter Property="Height" Value="32" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="done">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Reservation.Status}" Value="canceled">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost x:Name="LoaderDialogHost">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="56" Height="56"
                             Style="{StaticResource MaterialDesignCircularProgressBar}" />
                <TextBlock Text="Loading..." Margin="0,10,0,0"
                           FontWeight="Bold" HorizontalAlignment="Center" FontSize="13"/>
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>

        <!-- MAIN LAYOUT -->
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Main content -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom buttons -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="4,4,4,12">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="CalendarCheckOutline"
                                             Width="26" Height="26"
                                             Foreground="#673AB7"
                                             Margin="0,0,10,0"/>
                    <TextBlock Text="Reservation Details"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#333"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock FontSize="13" Foreground="Gray" Margin="0,6,0,0"
                           Text="Detailed information for a specific reservation"/>
            </StackPanel>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- BASIC INFORMATION -->
                        <GroupBox Header="Basic Information" Padding="10" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Receipt Number:" Margin="0,0,8,6" VerticalAlignment="Center" />
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Reservation.ReceiptNumber}" IsReadOnly="True" Style="{StaticResource TextBoxDisableWhenFinal}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Celebrant:" Margin="0,8,8,6" VerticalAlignment="Center" />
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Reservation.Celebrant}" Style="{StaticResource TextBoxDisableWhenFinal}" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Venue:" Margin="0,8,8,6" VerticalAlignment="Center" />
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Reservation.Venue}" Style="{StaticResource TextBoxDisableWhenFinal}" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Location:" Margin="0,8,8,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Reservation.Location}" Style="{StaticResource TextBoxDisableWhenFinal}" Margin="0,8,0,0"/>
                            </Grid>
                        </GroupBox>

                        <!-- SCHEDULE -->
                        <GroupBox Header="Schedule" Padding="10" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Event Date" Margin="0,0,0,4" FontSize="14"/>
                                    <DatePicker SelectedDate="{Binding Reservation.EventDate}" Style="{StaticResource DatePickerDisableWhenFinal}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Event Time" Margin="0,0,0,4" FontSize="14"/>
                                    <TextBox Text="{Binding Reservation.EventTime}" Style="{StaticResource TextBoxDisableWhenFinal}"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- COUNTS & STATUS -->
                        <GroupBox Header="Counts &amp; Status" Padding="10" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Adults" Margin="0,0,0,4" />
                                        <TextBox Text="{Binding Reservation.AdultsQty, StringFormat={}{0:0}}" Style="{StaticResource TextBoxDisableWhenFinal}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Kids" Margin="0,0,0,4" />
                                        <TextBox Text="{Binding Reservation.KidsQty, StringFormat={}{0:0}}" Style="{StaticResource TextBoxDisableWhenFinal}"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Grid.Row="1" Text="Reservation Status" Margin="0,0,0,6" FontSize="14"/>

                                <ComboBox Grid.Row="2"
                                          SelectedValue="{Binding Reservation.Status}" SelectedValuePath="Content"
                                          Style="{StaticResource ComboBoxDisableWhenFinal}">
                                    <ComboBoxItem Content="pending"/>
                                    <ComboBoxItem Content="confirmed"/>
                                    <ComboBoxItem Content="contractsigning"/>
                                    <ComboBoxItem Content="completed"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>

                        <!-- CLIENT & PACKAGE -->
                        <GroupBox Header="Client &amp; Package" Padding="10" Margin="0,0,0,12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Client:" FontWeight="Bold" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Reservation.Profile.FullName}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" FontWeight="Bold" Margin="0,6,0,0" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Reservation.Profile.Email}" Margin="0,6,0,0" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Package:" FontWeight="Bold" Margin="0,6,0,0" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Reservation.Package.Name}" Margin="0,6,0,0" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grazing:" FontWeight="Bold" Margin="0,6,0,0" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Reservation.Grazing.Name}" Margin="0,6,0,0" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Theme:" FontWeight="Bold" Margin="0,6,0,0" />
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Reservation.ThemeMotif.Name}" Margin="0,6,0,0" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- SPLITTER -->
                <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch" Background="#DDD" />

                <!-- RIGHT PANEL -->
                <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Menu Orders" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,8"/>

                        <Border BorderThickness="1" BorderBrush="#DDD" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                            <ListView ItemsSource="{Binding ReservationMenuOrders}"
                                      SelectedItem="{Binding SelectedMenuOrder}"
                                      Style="{StaticResource MaterialDesignListView}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      VerticalAlignment="Stretch">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Dish" DisplayMemberBinding="{Binding menu_options.Name}" />
                                        <GridViewColumn Header="Added At" DisplayMemberBinding="{Binding CreatedAt, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" Width="200" />
                                    </GridView>
                                </ListView.View>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- FIXED BOTTOM BUTTONS -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Style="{StaticResource ButtonDisableWhenFinal}"
                        Command="{Binding UpdateReservationCommand}"
                        Background="#673AB7"
                        Foreground="White"
                        Padding="10,6" Height="34">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18"/>
                        <TextBlock Text="Update" Margin="8,0,0,0" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ButtonDisableWhenFinal}"
                        Command="{Binding GenerateContractCommand}"
                        Background="#3949AB"
                        Foreground="White"
                        Padding="10,6" Height="34" Margin="8,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FilePdfBox" Width="18" Height="18"/>
                        <TextBlock Text="Contract" Margin="8,0,0,0" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ButtonDisableWhenFinal}"
                        Command="{Binding CancelReservationCommand}"
                        Background="#E53935"
                        Foreground="White"
                        Padding="10,6" Height="34" Margin="8,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CloseCircle" Width="18" Height="18"/>
                        <TextBlock Text="Cancel" Margin="8,0,0,0" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:DialogHost>
</Window>
