<Window x:Class="CATERINGMANAGEMENT.View.Windows.ReservationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Reservation Details"
        Height="900" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Calibri"
        FontSize="18"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Purple" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <materialDesign:DialogHost x:Name="LoaderDialogHost">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <ProgressBar IsIndeterminate="True"
                         Width="60" Height="60"
                         Style="{StaticResource MaterialDesignCircularProgressBar}" />
                <TextBlock Text="Generating contract and sending email..."
                       Margin="0,15,0,0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       HorizontalAlignment="Center" />
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>
        
        <Grid>

     

        <!-- 🔘 Ellipses in Top-Right Corner -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,30,30,0"
                    ZIndex="999">
            <Ellipse Width="15" Height="15" Fill="LightGray" Margin="0,0,8,0"
                     MouseDown="MinimizeAppBtnHandler">
                <Ellipse.ToolTip>Minimize</Ellipse.ToolTip>
            </Ellipse>
            <Ellipse Width="15" Height="15" Fill="Tomato"
                     MouseDown="ExitAppBtnHandler">
                <Ellipse.ToolTip>Exit</Ellipse.ToolTip>
            </Ellipse>
        </StackPanel>

        <!-- 🧾 Main Layout -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 📄 LEFT: Contract Image -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0">
                    <Grid Width="595" Height="842" Background="White">
                        <Image Source="/Assets/images/contract.png" Stretch="Fill" />
                    </Grid>
                </Border>
            </ScrollViewer>

            <!-- 📝 RIGHT: Reservation Form -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Margin="0, 30">
                <Border Background="White" Padding="30" CornerRadius="4">
                    <StackPanel>

                        <TextBlock Text="Reservation Details"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}" />

                        <!-- Fields -->
                        <TextBox Text="{Binding ReceiptNumber}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Receipt Number"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True" />

                        <TextBox Text="{Binding Celebrant}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Celebrant"
                                 Margin="0,0,0,10" 
                                 IsReadOnly="True"/>

                        <TextBox Text="{Binding Venue}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Venue"
                                 Margin="0,0,0,10" 
                                 IsReadOnly="True"/>

                        <TextBox Text="{Binding Profile.FullName}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Client Name"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True" />

                        <TextBox Text="{Binding Profile.Email}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Email"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True" />

                        <TextBox Text="{Binding ThemeMotif.Name}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Theme / Motif"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True" />

                        <TextBox Text="{Binding Package.Name}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Package"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True" />

                        <TextBox Text="{Binding Grazing.Name}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Grazing Table"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True" />

                        <TextBox Text="{Binding Location}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Hint="Location"
                                 Margin="0,0,0,10" 
                                 IsReadOnly="True"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <DatePicker SelectedDate="{Binding EventDate}"
                                        Grid.Column="0"
                                        materialDesign:HintAssist.Hint="Event Date" />

                            <TextBox Text="{Binding EventTime}"
                                     Grid.Column="2"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Event Time" 
                                     IsReadOnly="True" />
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBox Text="{Binding AdultsQty}"
                                     Grid.Column="0"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Adults Qty"
                                     IsReadOnly="True"/>

                            <TextBox Text="{Binding KidsQty}"
                                     Grid.Column="2"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="Kids Qty"
                                     IsReadOnly="True"/>
                        </Grid>

                        <ComboBox SelectedValue="{Binding Status}"
                                  SelectedValuePath="Content"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  materialDesign:HintAssist.Hint="Status"
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="pending" />
                            <ComboBoxItem Content="confirmed" />
                            <ComboBoxItem Content="canceled" />
                        </ComboBox>
                        <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,20,0,0"
           >

                            <!-- ✅ Update Button - Primary color -->
                            <!-- ✅ Update Button - Primary color -->
                            <Border CornerRadius="10">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#673AB7"
                                        Foreground="White"
                                        Padding="12,6"
                                        Margin="5,0"
                                        Command="{Binding UpdateReservationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">   
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ContentSaveEdit" Width="20" Height="20" Margin="0,0,6,0" />
                                        <TextBlock Text="Update" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Border>


                            <!-- 📄 Generate Contract Button - Secondary color -->
                            <Border CornerRadius="10">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#3949AB"
                                        Foreground="White"
                                        Click="GenerateContractButton_Click"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FilePdfBox" Width="20" Height="20" Margin="0,0,6,0" />
                                        <TextBlock Text="Generate Contract" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Border>
                        </StackPanel>


                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
    </materialDesign:DialogHost>
</Window>
