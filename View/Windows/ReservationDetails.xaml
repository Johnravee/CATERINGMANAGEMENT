<Window x:Class="CATERINGMANAGEMENT.View.Windows.ReservationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CATERINGMANAGEMENT.ViewModel"
        Title="Reservation Details"
        Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Calibri"
        FontSize="18"
        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Purple" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel 
                        Background="White"
                       
                    
                        Margin="0,0,0,20">

                <TextBlock Text="Reservation Details"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" />

                <TextBox Text="{Binding ReceiptNumber}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Receipt Number"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding Celebrant}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Celebrant"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding Venue}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Venue"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding Location}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Location"
                         Margin="0,0,0,10" />

                <DatePicker SelectedDate="{Binding EventDate}"
                            materialDesign:HintAssist.Hint="Event Date"
                            Margin="0,0,0,10" />

                <TextBox Text="{Binding EventTime}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Event Time"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding AdultsQty}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Adults Quantity"
                         Margin="0,0,0,10" />

                <TextBox Text="{Binding KidsQty}"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Kids Quantity"
                         Margin="0,0,0,10" />

                <ComboBox ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding Status}"
                          Style="{StaticResource MaterialDesignComboBox}"
                          materialDesign:HintAssist.Hint="Status"
                          Margin="0,0,0,10"
                          IsEditable="False" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Update"
                        />

                    <Button Content="Delete"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="Red" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
