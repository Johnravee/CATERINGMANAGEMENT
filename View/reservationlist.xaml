<Window x:Class="CATERINGMANAGEMENT.View.reservationlist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:CATERINGMANAGEMENT.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodel:ReservationListViewModel}"
        Title="Reservation List"
        Height="680"
        Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Window.Resources>
        <!-- Centered Cell Style -->
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Centered Header Style -->
        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#ECEFF1"/>
        </Style>

        <!-- TextBlock style for centered column values -->
        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MaxWidth" Value="250"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernFlatButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reservation List"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <TextBox Width="200" Height="30" Padding="10,2" 
                     HorizontalContentAlignment="Center" />
        </StackPanel>

        <DataGrid Grid.Row="2"
                  x:Name="ReservationGrid"
                  ItemsSource="{Binding Reservations}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F0F0F0"
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  GridLinesVisibility="None"
                  Margin="0"
                  BorderThickness="0"
                  ColumnHeaderHeight="40"
                  RowHeight="40"
                  EnableRowVirtualization="False"
                  EnableColumnVirtualization="False"
                  Background="White"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CellStyle="{StaticResource CenteredCellStyle}"
                  ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Receipt #" Binding="{Binding ReceiptNumber}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Celebrant" Binding="{Binding Celebrant}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding EventDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding EventTime}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Adults" Binding="{Binding AdultsQty}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Kids" Binding="{Binding KidsQty}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Venue" Binding="{Binding Venue}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*" ElementStyle="{StaticResource CenteredTextStyle}"/>

                <!-- ✅ STATUS with Conditional Coloring (Only Cell) -->
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredTextStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="canceled">
                                    <Setter Property="Background" Value="#F8D7DA"/>
                                    <Setter Property="Foreground" Value="#721C24"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="confirmed">
                                    <Setter Property="Background" Value="#D4EDDA"/>
                                    <Setter Property="Foreground" Value="#155724"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="pending">
                                    <Setter Property="Background" Value="#FFF3CD"/>
                                    <Setter Property="Foreground" Value="#856404"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Actions" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="View" Style="{StaticResource ModernFlatButton}" />
                                <Button Content="Delete"
                                        Style="{StaticResource ModernFlatButton}"
                                        Background="#E53935"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="⟨ Prev" Style="{StaticResource ModernFlatButton}" />
            <Label Content="Page 1 of 5"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="10,0"/>
            <Button Content="Next ⟩" Style="{StaticResource ModernFlatButton}" />
        </StackPanel>
    </Grid>
</Window>
